
<div class="container" style="margin-top: 100px auto;">
<div class="row">
<div class="col-6 offset-3"> 
    <h4>Agregar una novedad</h3>
<form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
  <div class="mb-3 row" style="padding: 10px;">
    <input type="text" class="form-control" placeholder="titulo" name="titulo">
  </div>
  <div class="mb-3 row" style="padding: 10px;">
    <textarea type="text" class="form-control" placeholder="subtitulo" name="subtitulo"></textarea>
  </div>
  <div class="mb-3 row" style="padding: 10px;">
    <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo"></textarea>
  </div>
  <div class="form-group">
    <label>Imagen: <input type="file" name="imagen" id="imagen" style="margin: 50px;"/></label>
  </div>
  <button type="submit" class="btn btn-success">Guardar</button>
</form>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}
</div>
</div>
</div>