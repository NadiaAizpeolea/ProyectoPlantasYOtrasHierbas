<div class="container" style="margin-top: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3"> 
        <h4>Modificar una novedad</h3>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value={{novedad.id}} name="id">
                <div class="form-group"style="padding: 10px;">
                    <input type="text" placeholder="tÃ­tulo" value={{novedad.titulo}} class="form-control" name="titulo">
                </div>
                <div class="form-group" style="padding: 10px;">
                    <textarea type="text" class="form-control" placeholder="subtitulo" value={{novedad.subtitulo}} name="subtitulo"></textarea>
                </div>
                <div class="form-group" style="padding: 10px;">
                    <textarea type="text" class="form-control" placeholder="cuerpo" value={{novedad.cuerpo}} name="cuerpo"></textarea>
                </div>
                <div class="form-group">
                    <p>
                    <label>Imagen: <input type="file" name="imagen" id="imagen" style="margin: 50px;"/></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-success">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>