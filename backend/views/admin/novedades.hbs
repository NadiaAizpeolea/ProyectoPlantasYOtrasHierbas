<div class="container" style="margin-top:50px">
    {{!--fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{usuario}} !  <a class="btn btn-warning" href="/admin/login/logout">cerrar sesion
                    <i class="fas fa-sign-out-alt">

                    </i></a>
        </p>
    </div>
    {{!--fin fila 1 --}}
    {{!--fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>

        </div>
    </div>
    {{!--fin fila 2 --}}
    {{!--fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table table-secondary table-striped-columns">
                <thead>
                    <tr class="table-success">
                        <th scope="col">#</th>
                        <th scope="col">título</th>
                        <th scope="col">subtítulo</th>
                        <th scope="col">imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr> 
                </thead>
                <tbody>
                    
                    {{#each novedades}}
                    
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{{imagen}}}</td>

                        <td class="text-end">
                            <a class="btn btn-success" href="/admin/novedades/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-success" href="/admin/novedades/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                       {{/each}}
                </tbody>
                
             
             
            </table>
        </div>
    </div>
 {{!--fin fila 3 --}}

</div>